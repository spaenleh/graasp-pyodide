{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["esnext", "DOM"],
    "outDir": "dist",
    "types": [],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.{ts|js|tsx|jsx}"]
}
